            </div>
        </div>
        <div class="row danhSachSanPham">
            <div class="col-md-12">
                <div class="row">

                    {{#each model.sanphamCungLoai}}
                    <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                        <div></div>
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 sanpham">
                        <a href="/timkiem/chitiet?masanpham={{maSP}}">
                            <img src='/assets/img/{{linkAnhSP}}'>
                        </a>
                        <form>
                            <div class="thongTinSP">
                                <span>{{maSP}} </span>
                                <div></div>
                                <span>{{tenSP}}</span>
                                <div></div>
                                <span>{{giaSP}} </span>
                            </div>
                            <button class="btn btn-warning mua hidden" type="button">Mua </button>
                        </form>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>